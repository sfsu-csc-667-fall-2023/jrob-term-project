<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game <%= id %></title>
    <link rel="stylesheet" href="/styles/pico.css" />
    <script src="/scripts/chat.js" defer></script>
    <script src="/scripts/games.js" defer></script>
  </head>
  <body>
    <nav class="container">
      <ul>
        <li>Jrob's Game</li>
      </ul>
      <ul>
        <li><a href="/">Landing</a></li>
        <li><a href="/auth/logout">Logout</a></li>
        <li><a href="/lobby">Lobby</a></li>
      </ul>
    </nav>
    <main class="container">
      <h1>Game <%= id %></h1>
      <section id="game-board">
        <form action="/games/<%= id %>/test" method="post" id="test-form">
          <button type="submit">Test</button>
        </form>
      </section>

      <input
        type="hidden"
        name="game-socket-id"
        id="game-socket-id"
        value="<%= gameSocketId %>"
      />
      <input
        type="hidden"
        name="user-socket-id"
        id="user-socket-id"
        value="<%= userSocketId %>"
      />

      <%- include('partials/chat', { roomId: id }) %>
    </main>
  </body>
</html>
